{#- Template for Go structs #}

{% block logs scoped %}
  {{ log.debug("Rendering struct: " + data.name) }}
{% endblock logs %}

<div class="doc doc-object doc-class">
  {% with obj = data, html_id = data.name %}
    {% if root %}
      {% set show_full_path = config.show_root_full_path %}
      {% set root_members = True %}
    {% elif root_members %}
      {% set show_full_path = config.show_root_members_full_path or config.show_object_full_path %}
      {% set root_members = False %}
    {% else %}
      {% set show_full_path = config.show_object_full_path %}
    {% endif %}

    {% set struct_name = data.name %}
    {% set symbol_type = "struct" %}

    {% filter heading(
        heading_level,
        role="struct",
        id=html_id,
        class="doc doc-heading",
        toc_label=('<code class="doc-symbol doc-symbol-toc doc-symbol-' + symbol_type + '"></code>&nbsp;'|safe if config.show_symbol_type_toc else '') + data.name,
      ) %}
      <span class="doc doc-object-name doc-object-class-name">{{ config.heading if config.heading and root else struct_name }}</span>
    {% endfilter %}

    <div class="doc doc-contents {% if root %}first{% endif %}">

      {% block docstring scoped %}
        {{ data.doc }}
      {% endblock %}

      {% block signature scoped %}
        {% filter format_types(data, config.line_length) %}
          {{ data.name }}
        {% endfilter %}
      {% endblock %}
      
    </div>
  {% endwith %}
</div>
